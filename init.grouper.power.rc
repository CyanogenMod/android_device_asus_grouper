# CyanogenMod Performances profiles
# Manage clock, governor, cpu_input_boost and cluster with the
# proper toggle. Low energy and Balanced are cloned from powerhal
# so they will not conflict

on property:sys.perf.profile=0
    # Low energy profile
    write /sys/kernel/cluster/active "lp"
    write /sys/module/cpu_input_boost/parameters/enabled "0"

on property:sys.perf.profile=1
    # Balanced profile
    write /sys/kernel/cluster/active "G"
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor "interactive"
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_governor "interactive"
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_governor "interactive"
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_governor "interactive"
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq "640000"
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_min_freq "640000"
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_min_freq "640000"
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_min_freq "640000"
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq "1200000"
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_max_freq "1200000"
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_max_freq "1200000"
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_max_freq "1200000"
    write /sys/module/cpu_input_boost/parameters/enabled "1"

on property:sys.perf.profile=2
    # Performances profile
    write /sys/kernel/cluster/active "G"
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor "performance"
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_governor "performance"
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_governor "performance"
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_governor "performance"
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq "1200000"
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_min_freq "1200000"
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_min_freq "1200000"
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_min_freq "1200000"
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq "1200000"
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_max_freq "1200000"
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_max_freq "1200000"
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_max_freq "1200000"
    write /sys/module/cpu_input_boost/parameters/enabled "1"
